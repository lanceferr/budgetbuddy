{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "src",
		"sourceMap": true,

		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["jest", "node"],
		"allowImportingTsExtensions": true,
    	"noEmit": true,
	},
	"include": ["src/**/*"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}